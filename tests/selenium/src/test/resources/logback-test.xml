<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender - Apenas para erros críticos -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - Para debug quando necessário -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>build/logs/selenium-tests.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>build/logs/selenium-tests.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Selenium WebDriver Logger -->
    <logger name="org.openqa.selenium" level="WARN"/>
    <logger name="org.openqa.selenium.remote" level="WARN"/>
    <logger name="com.qa.solar" level="INFO"/>
    
    <!-- HTTP Client Loggers - Silenciar logs excessivos -->
    <logger name="org.apache.hc" level="WARN"/>
    <logger name="org.apache.hc.client5" level="WARN"/>
    <logger name="org.apache.hc.client5.http" level="WARN"/>
    <logger name="org.apache.hc.client5.http.wire" level="WARN"/>
    <logger name="org.apache.hc.client5.http.impl" level="WARN"/>
    
    <!-- WebDriverManager Logger -->
    <logger name="io.github.bonigarcia.wdm" level="WARN"/>
    
    <!-- Gradle Logger -->
    <logger name="org.gradle" level="WARN"/>
    
    <!-- JUnit Logger -->
    <logger name="org.junit" level="WARN"/>
    
    <!-- Logback Internal Loggers - Completamente silenciados -->
    <logger name="ch.qos.logback" level="OFF"/>
    <logger name="ch.qos.logback.classic" level="OFF"/>
    <logger name="ch.qos.logback.core" level="OFF"/>
    <logger name="ch.qos.logback.core.model" level="OFF"/>
    <logger name="ch.qos.logback.core.rolling" level="OFF"/>
    <logger name="ch.qos.logback.core.util" level="OFF"/>

    <!-- Root Logger - Apenas erros -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
